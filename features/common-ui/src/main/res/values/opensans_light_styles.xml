<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="OpenSansLight" parent="@style/Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/opensans_light</item>
    </style>

    <!--  Black Color-->

    <style name="OpenSansLight.Black">
        <item name="android:textColor">@color/black_font</item>
    </style>

    <style name="OpenSansLight.Black.XXXS">
        <item name="android:textSize">8sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>

    <style name="OpenSansLight.Black.XXS">
        <item name="android:textSize">11sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>

    <style name="OpenSansLight.Black.S">
        <item name="android:textSize">13sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>

    <style name="OpenSansLight.Black.M">
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">3sp</item>

    </style>

    <style name="OpenSansLight.Black.L">
        <item name="android:textSize">17sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>

    <style name="OpenSansLight.Black.XL">
        <item name="android:textSize">21sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>

    <style name="OpenSansLight.Black.XXL">
        <item name="android:textSize">26sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>

    <style name="OpenSansLight.Black.XXXL">
